<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A6CFD5"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:background="#5226EA"
            app:srcCompat="@drawable/icons8_homework" />

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:scaleX="2"
        android:scaleY="2"
        android:text="Welcome to Grade App!"
        android:textColor="#F56476"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Welcome! Please login to proceed by entering in a correct username and password. " />

    <EditText
        android:id="@+id/username_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="USERNAME"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/password_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="PASSWORD"
        android:textSize="24sp" />

    <Button
        android:id="@+id/loginbutton_main"
        android:layout_width="273dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|fill_vertical"
        android:background="@drawable/rounded_corners"

        android:text="Login"
        android:textColor="#DBFCFF" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:text="   " />

    <Button
        android:id="@+id/create_login_button"
        android:layout_width="273dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|fill_vertical"
        android:background="@drawable/rounded_corners"

        android:text="CREATE NEW LOGIN"
        android:textColor="#DBFCFF" />

</LinearLayout>